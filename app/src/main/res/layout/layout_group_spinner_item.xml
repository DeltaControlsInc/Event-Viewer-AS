<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/groupSpinnerItemColorLayout"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_margin="2dp" >

        <RelativeLayout
            android:id="@+id/groupSpinnerItemColor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="@drawable/shape_event_category_color_spinner_background" />
    </RelativeLayout>

    <TextView
        android:id="@+id/groupSpinnerItemName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/groupSpinnerItemColorLayout"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="" />


</RelativeLayout>